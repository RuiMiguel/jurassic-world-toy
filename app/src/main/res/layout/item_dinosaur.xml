<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="100dp"
    android:layout_height="150dp"
    android:background="@drawable/library_background">

    <ImageView
        android:id="@+id/dinosaur_image"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_jurassic_world_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dinosaur_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/jurassic_park"
        android:maxLines="1"
        android:text="TIRANOSAUR REX"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dinosaur_image" />
</androidx.constraintlayout.widget.ConstraintLayout>